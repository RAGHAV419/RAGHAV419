public class hard_code {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	int arr[]= {1,3,4,7,5};
	int i=0;
	int item=4;
	System.out.println(search(arr,i,item));
	}
	public static int search(int arr[],int i,int item) {
		if(i==arr.length) {
			return -1;
		}
		if(arr[i]==item) {
			return arr[i];
		}
		int x=search(arr,i+1,item);
		return x;
	}
	

}
